<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:background="#FF8C00">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ticketId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:textSize="20sp"
                android:text="Ticket ID"
                android:textStyle="bold" />

            <Button
                android:id="@+id/eliminaB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Elimina biglietto" />
        </LinearLayout>

        <TextView
            android:id="@+id/startStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Station"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/endStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Station"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/departureDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure Date"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/arrivalDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Arrival Date" />

        <TextView
            android:id="@+id/departureTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure Time"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/arrivalTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/acquistaP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acquista un pasto" />

            <Button
                android:id="@+id/visualizzaB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Visualizza Pasto" />
        </LinearLayout>

        <Button
            android:id="@+id/Convalida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convalida" />

        <ImageView
            android:id="@+id/check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/check_outline" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
